<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="Playground.Toolbar" parent="Widget.MaterialComponents.Toolbar">
    <item name="android:background">@android:color/white</item>
    <item name="android:elevation">0dp</item>
  </style>

  <style name="Playground"/>

  <!-- Text -->
  <style name="Playground.TextView"/>

  <style name="Playground.TextView.Title">
    <item name="android:textSize">17sp</item>
    <item name="android:textColor">@android:color/black</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="Playground.TextView.Title.Light">
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">@android:color/darker_gray</item>
  </style>

  <style name="Playground.TextView.Text">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@android:color/black</item>
    <item name="android:lineSpacingExtra">1dp</item>
    <item name="android:lineSpacingMultiplier">1.2</item>
  </style>
</resources>